@model IEnumerable<MvcCoreEmpleadosSession.Models.Empleado>

@{
    ViewData["Title"] = "EmpleadosFavoritos";
}

<h1>Empleados Favoritos</h1>

<img src="~/images/love.png" style="width: 100px; height: 100px" />

<p>
    <a asp-controller="Empleados"
        asp-action="SessionEmpleadosOk">
        Almacenar empleados
    </a>
</p>

<h2 style="color:red">
    @ViewData["MENSAJE"]
</h2>

@if (Model != null)
{
    <table class="table table-bordered table-danger">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdEmpleado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Oficio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


