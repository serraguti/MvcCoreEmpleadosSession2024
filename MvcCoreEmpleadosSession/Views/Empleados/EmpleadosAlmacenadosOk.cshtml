@model List<Empleado>

<h1 style="color:fuchsia">
    Empleados almacenados OK
</h1>

<p>
    <a asp-controller="Empleados"
        asp-action="SessionEmpleadosOk">
        Almacenar empleados
    </a>
</p>

@if (Context.Session.GetString("IDSEMPLEADOS") == null)
{
    <h2 style="color:red">No existen empleados en Session</h2>
}


@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td>
                        <a asp-controller="Empleados"
                            asp-action="EmpleadosAlmacenadosOk"
                            asp-route-ideliminar="@emp.IdEmpleado">
                            <img src="~/images/delete.png" style="width: 35px; height: 35px" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}